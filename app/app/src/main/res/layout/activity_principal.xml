<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_inicio_margin_horizontal_botones"
        android:layout_marginRight="@dimen/activity_inicio_margin_horizontal_botones"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnIngresarSalir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_ingresar_btn_ingresar" />

        <Button
            android:id="@+id/btnConsultarListadoConectados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_principal_btn_consultar_listado" />


    </LinearLayout>

</RelativeLayout>