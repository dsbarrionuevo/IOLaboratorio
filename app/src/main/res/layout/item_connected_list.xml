<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/txV_Descripcion_Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre"
        style="@style/fontTitle"/>

    <TextView
        android:id="@+id/txV_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Probando"
        android:layout_alignRight="@id/txV_Descripcion_Nombre"
        style="@style/fontDeffault"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txV_Descripcion_fecha_ingreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fecha_ingreso"
            style="@style/fontTitle"/>

        <TextView
            android:id="@+id/txV_fecha_ingreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Probando"
            style="@style/fontDeffault"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txV_descripcion_fecha_egreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fecha_egreso"
            style="@style/fontTitle"/>

        <TextView
            android:id="@+id/txV_fecha_egreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Probando"
            style="@style/fontDeffault"/>
    </RelativeLayout>

</LinearLayout>